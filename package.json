{
  "private": true,
  "workspaces": [
    "packages/2d",
    "packages/core",
    "packages/create",
    "packages/game",
    "packages/inspector",
    "packages/integration-tests",
    "packages/scripts",
    "packages/website"
  ],
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "babel-eslint": "^10.1.0",
    "babel-plugin-remove-prev-node": "^1.0.2",
    "baseline-browser-mapping": "^2.9.18",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-config-unobtrusive": "^1.2.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "kleur": "^4.1.5",
    "prettier": "2.8.7",
    "shelljs": "^0.10.0",
    "typescript": "5.9.3",
    "yargs-parser": "^22.0.0"
  },
  "scripts": {
    "build": "./dev-scripts/build.sh",
    "watch": "./dev-scripts/watch.sh",
    "start": "npm run watch",
    "typecheck": "tsc --noEmit",
    "test-it": "node ./packages/scripts/dist/cli.js test './packages/*/src/**/*.test.{ts,js,tsx,jsx}' '!**/node_modules/**'",
    "test": "npm run typecheck && npm run test-it",
    "build-website": "cd packages/website && npm run build",
    "netlify": "apt-get install -y fish && npm run build-website"
  }
}
